{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "src/**/*"]
  },
  "include": ["src/**/*", "src/locales/*/**.json"],
  "exclude": ["node_modules", "dist"]
}
